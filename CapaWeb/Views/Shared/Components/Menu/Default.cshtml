<div class="user-details">
    <div class="text-center">
        <img src="~/assets/images/users/avatar-1.jpg" alt="" class="rounded-circle">
    </div>
    <div class="user-info">
        <div class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">@ViewData["nomUsuario"]</a>
            <ul class="dropdown-menu">
                <li><a href="javascript:void(0)" class="dropdown-item"> Perfil</a></li>
                <li><a href="javascript:void(0)" class="dropdown-item"><span class="badge badge-success float-right">5</span> Settings </a></li>
                <li class="dropdown-divider"></li>
                <li><a asp-controller="Home" asp-action="Salir" class="dropdown-item"> Salir</a></li>
            </ul>
        </div>

        <p class="text-muted m-0"><i class="far fa-dot-circle text-primary"></i> @ViewData["rolUsuario"]</p>
    </div>
</div>